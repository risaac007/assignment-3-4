package javaapplication47;

/**
 *
 * @author hp1
 */
public class Calculator {
    int n;
    void add(int a,int b){
    n=a+b;
    System.out.println("The answer for addition operation is"+n);
    
    
    
}
    void subtract(int a,int b)
    {    
    n=a-b;
    System.out.println("The answer for subtraction operation is"+n);
    
    }
    
    void multiply(int a,int b)
    {
        n=a*b;
        System.out.println("The answer for multiplication operation is"+n);
    }
    
    void division(int a,int b)
    {
        n=a/b;
        System.out.println("The answer for division operation is"+n);
       
    }
    
    
    
